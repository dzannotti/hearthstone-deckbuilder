{
  "name": "hearthstone-deckbuilder",
  "version": "0.3.0",
  "description": "Hearthstone Deck Builder",
  "private": true,
  "engines": {
    "node": ">=9.0",
    "yarn": ">= 1.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --hot --inline --progress --env.dev",
    "build": "cross-env NODE_ENV=production webpack --env.build -p --bail",
    "clean": "rimraf build",
    "lint": "prettier --write && standard --fix",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "lodash.omit": "^4.5.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-virtualized": "^9.18.5",
    "styled-components": "^3.1.5",
    "styled-reset": "^1.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-react-app": "^3.1.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.1.3",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "json-loader": "^0.5.7",
    "lint-staged": "^6.1.0",
    "parcel-bundler": "1.4.1",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "standard": "^10.0.3",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "standard --fix",
      "git add"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "src/vendor"
    ]
  }
}
